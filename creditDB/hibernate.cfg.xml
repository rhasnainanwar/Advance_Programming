<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   
		<property name = "hibernate.dialect">
		   org.hibernate.dialect.MySQLDialect
		</property>
		
		<property name = "hibernate.connection.driver_class">
		   com.mysql.jdbc.Driver
		</property>
		
		<property name = "hibernate.connection.url">
		   jdbc:mysql://localhost:3306/assignment3
		</property>
		
		<property name = "hibernate.connection.username">
		   root
		</property>
		
		<property name = "hibernate.connection.password"></property>
		
		<mapping class="com.hasnain.customer.creditDB.Customer"/>
		<mapping class="com.hasnain.customer.creditDB.CustomerDetail"/>
		<mapping class="com.hasnain.customer.creditDB.CustomerComb"/>
	</session-factory>
</hibernate-configuration>